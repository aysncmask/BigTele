<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6DAEF"
    android:orientation="vertical"
    tools:context=".ui.activity.Activity_Register">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="76.5dp"
        android:src="@drawable/reg_top_logo_img" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background = "@drawable/bg_edittext_normal"
        android:drawableLeft="@drawable/reg_list_mobile_icon"
        android:drawablePadding="15dp"
        android:id="@+id/et_reg_phone"
        android:hint="请输入手机号"
        android:textColorHint="#ffffff" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/login_et_phone"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#ffffff"
            android:background = "@drawable/bg_edittext_normal"
            android:drawableLeft="@drawable/reg_list_code_icon"
            android:drawablePadding="8.7dp"
            android:hint="请输入验证码"
            android:textColorHint="#ffffff" />

        <Button
            android:layout_marginTop="4dp"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignRight="@id/login_et_phone"
            android:background="@drawable/bg_button_normal"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:textSize="12.5sp"

            />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#ffffff"
        android:background = "@drawable/bg_edittext_normal"
        android:drawableLeft="@drawable/reg_list_lock_icon"
        android:drawablePadding="15dp"
        android:hint="请输入密码"
        android:textColorHint="#ffffff" />

    <Button
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="#ffffff"
        android:text="注册"
        android:textColor="#B6DAEF"
        android:id="@+id/bt_reg_register"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号，请登录"
            android:textColor="#ffffff"
            android:textSize="16.5dp"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/reg_bottom_arrow_icon"

            />
    </LinearLayout>


</LinearLayout>
