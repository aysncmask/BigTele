<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:src="@color/bg_brown">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_adv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"

            >


        </android.support.v4.view.ViewPager>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/rg_home_adv"
            >

            <RadioButton
                android:layout_width="9.5dp"
                android:layout_height="9.5dp"

                android:background="@drawable/selector_rb_home_adv_bg"
                android:id="@+id/rb_home_adv_p1"
                android:button="@null" />

            <RadioButton
                android:layout_width="9.5dp"
                android:layout_height="9.5dp"
                android:id="@+id/rb_home_adv_p2"

                android:background="@drawable/selector_rb_home_adv_bg"
                android:button="@null" />

            <RadioButton
                android:layout_width="9.5dp"
                android:layout_height="9.5dp"
                android:id="@+id/rb_home_adv_p3"

                android:background="@drawable/selector_rb_home_adv_bg"
                android:button="@null" />

            <RadioButton
                android:layout_width="9.5dp"
                android:layout_height="9.5dp"
                android:id="@+id/rb_home_adv_p4"

                android:background="@drawable/selector_rb_home_adv_bg"
                android:button="@null" />


        </RadioGroup>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="187.5dp"
            android:layout_height="match_parent"
            android:background="#ffffff" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/homeecgbtnselected"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0.5px"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"></LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="187.5dp"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/home120btnselected"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/homereadbtnselected"
                android:layout_gravity="center"
                 />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0.5px"
            android:layout_height="match_parent"></LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="125dp"
            android:layout_height="140dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/homeconsultingbtnselected"
                android:layout_gravity="center" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0.5px"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"></LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="125dp"
            android:layout_height="140dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/homechannelbtnselected"
                android:layout_gravity="center" />
        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>